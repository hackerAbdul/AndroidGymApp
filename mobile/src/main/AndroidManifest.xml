<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abdul.gymapp">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:name=".database"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Pre_homepage" />
        <activity android:name=".RegisterPage" />
        <activity android:name=".Reset" />
        <activity android:name=".BeginnerPage" />
        <activity android:name=".IntermediatePage" />
        <activity android:name=".exercises" />
        <activity android:name=".Profile" />
        <activity android:name=".workouts" />
        <activity android:name=".Recorder"></activity>
    </application>

</manifest>